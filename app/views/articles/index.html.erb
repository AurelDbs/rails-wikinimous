<h1>List of all articles</h1>

<% @articles.each do |article| %>
  <h3><%= link_to article.title, article_path(article) %></h3>
  <p><%= article.content %></p>
    <%= link_to "Delete", article_path(article),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
    <%= link_to "Edit", edit_article_path(article) %>
    <hr>
<% end %>


